[general]
metadata = ~/.offlineimap
pythonfile = ~/.offlineimap/keyring.py

accounts = gmail,fulbright
maxsyncaccounts = 4

socktimeout = 30

[Account gmail]
localrepository = local-gmail
remoterepository = gmail
autorefresh = 2

[Repository local-gmail]
type = Maildir
