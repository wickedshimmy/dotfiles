[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = cyan bold
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[branch]
	autosetupmerge = true

[bz-tracker "gnome"]
	host = bugzilla.gnome.org
	default-bug-severity = enhancement
